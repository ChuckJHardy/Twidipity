<% if @statement.error? %>
  <% content_for(:developer) do %>
    <p><%= @statement.error %></p>
  <% end %>
<% end %>

<% content_for(:title) { 'Twidipity | Following' } %>
<% content_for(:nav) { render partial: 'nav' } %>

<h2 class='statement'>
  <%= link_to 'Refresh | ', statement_path(@statement) if @statement.suggestions.none? %><%= link_to 'Unfollow', statement_path, method: :delete %>
</h2>

<ul class='suggestions'>
  <% if @statement.suggestions.any? %>
    <% @statement.suggestions.each do |suggestion| %>
      <li>
        <%= link_to(image_tag(suggestion.profile_image_uri, size: '40x40', alt: suggestion.screen_name), suggestion.uri, target: :blank) %>
      </li>
    <% end %>
  <% else %>
    <li><div class='circle'></div></li>
    <li><div class='circle'></div></li>
    <li><div class='circle'></div></li>
    <li><div class='circle'></div></li>
  <% end %>
</ul>
