<%= form_for :person do |f| %>
  <div class="row director">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <h3>10/01/2015</h3>
    </div>
    <div class="col-md-2"></div>
  </div>

  <div class="row statement">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div>
        <%= f.text_field :mailbox, placeholder: 'EMAIL ADDRESS' %>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>

  <div class="row director">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <h3><%= f.submit "Send" %></h3>
    </div>
    <div class="col-md-2"></div>
  </div>
<% end %>
